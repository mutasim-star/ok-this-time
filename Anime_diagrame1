            plugins: [{
                beforeDraw: (chart) => {
                    const ctx = chart.ctx;
                    ctx.save();
                    
                    // Add subtle texture
                    ctx.fillStyle = 'rgba(255, 255, 255, 0.008)';
                    for (let i = 0; i < chart.width; i += 30) {
                        for (let j = 0; j < chart.height; j += 30) {
                            if (Math.random() > 0.7) {
                                ctx.fillRect(i, j, 1, 1);
                            }
                        }
                    }
                    
                    ctx.restore();
                }
            }]
        });
        
        // Mobile touch handling
        const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
        const canvas = document.getElementById('animeChart');
        
        if (isTouchDevice) {
            canvas.addEventListener('touchstart', (e) => {
                e.preventDefault();
                const points = chart.getElementsAtEventForMode(e, 'nearest', { intersect: false }, false);
                if (points.length) {
                    const index = points[0].index;
                    const phases = ["Start", "Discovery", "Hook", "Community", "Rise", "Peak", "Heaven", "Fall", "Drought", "Crisis", "Desperate", "Abyss", "Crossroads", "Decision", "Enlightenment"];
                    
                    canvas.style.transform = 'scale(0.97)';
                    setTimeout(() => { canvas.style.transform = 'scale(1)'; }, 120);
                    
                    alert(`ðŸ“ Point ${index + 1}/15: ${phases[index]}\n\nTouch another point to explore.`);
                }
            }, { passive: false });
        }
        
        // Scroll animations
        const observerOptions = { threshold: 0.1, rootMargin: '0px 0px -60px 0px' };
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);
        
        document.querySelectorAll('.phase-card').forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(50px)';
            card.style.transition = 'opacity 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
            observer.observe(card);
        });
        
        // Page load animation
        window.addEventListener('load', () => {
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.6s ease';
            setTimeout(() => { document.body.style.opacity = '1'; }, 50);
        });
