    <script>
        const ctx = document.getElementById('animeChart').getContext('2d');
        
        // Create gradient for the line
        const gradient = ctx.createLinearGradient(0, 0, 0, 500);
        gradient.addColorStop(0, '#ff6b35');
        gradient.addColorStop(0.5, '#ff3e3e');
        gradient.addColorStop(1, '#3a86ff');
        
        const chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [
                    'Start', 'Month 1', 'Month 2', 'Month 4', 'Month 8', 
                    'Month 12', 'Month 16', 'Month 20', 'Month 24', 'Month 28',
                    'Month 32', 'Month 36', 'Month 40', 'Month 44', 'Month 48'
                ],
                datasets: [{
                    label: 'Enjoyment & Dopamine Level',
                    data: [
                        5, 30, 50, 75, 90, 
                        100, 100, 85, 70, 50, 
                        35, 25, 20, 10, 60
                    ],
                    borderColor: gradient,
                    backgroundColor: (context) => {
                        const bg = ctx.createLinearGradient(0, 0, 0, 500);
                        bg.addColorStop(0, 'rgba(255, 107, 53, 0.15)');
                        bg.addColorStop(0.5, 'rgba(255, 62, 62, 0.1)');
                        bg.addColorStop(1, 'rgba(58, 134, 255, 0.05)');
                        return bg;
                    },
                    borderWidth: 5,
                    fill: true,
                    tension: 0.42,
                    pointRadius: 9,
                    pointHoverRadius: 14,
                    pointBackgroundColor: [
                        '#ff6b35', '#ff6b35', '#ff6b35', '#ff6b35', '#ff3e3e',
